extends global

block content
  h1= title
  p.lead Contact Hupothesis team.

  if error
    p.notice.bg-danger.text-danger 
      i.fa.fa-exclamation-triangle  
      span Error when sending message : #{error}

  if notice
    p.notice.bg-info.text-info 
      i.fa.fa-info
      span &nbsp; #{notice}
  else
    p Fill free to contact us for any Hupothesis related request and/or informations. We will get in touch as soon as possible.
  form(method="POST", action="/contact")
    dl
      dt
        label(for="email") Your email
      dd
        input.form-control(type="email",name="email",id="email",required="true")
      dt
        label(for="subject") Subject
      dd
        input.form-control(type="text",name="subject",id="subject",required="true")
      dt
        label(for="comments") Your message
      dd
        textarea.form-control(name="comments",id="comments")
      dt
      dd
        button.btn.btn-primary(type="submit") Send